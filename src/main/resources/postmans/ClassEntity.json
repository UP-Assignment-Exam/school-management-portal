{
  "info": {
    "name": "ClassEntity CRUD API",
    "description": "Complete CRUD operations for ClassEntity with Spring Boot REST API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Classes Management",
      "item": [
        {
          "name": "1. Get All Classes",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/classes",
              "host": ["{{baseUrl}}"],
              "path": ["api", "classes"]
            },
            "description": "Retrieve all active (non-deleted) classes"
          },
          "response": []
        },
        {
          "name": "2. Get Classes with Search",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/classes?search=Java",
              "host": ["{{baseUrl}}"],
              "path": ["api", "classes"],
              "query": [
                {
                  "key": "search",
                  "value": "Java",
                  "description": "Search classes by name"
                }
              ]
            },
            "description": "Search classes by name containing the search term"
          },
          "response": []
        },
        {
          "name": "3. Get Classes with Available Spots",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/classes?availableOnly=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "classes"],
              "query": [
                {
                  "key": "availableOnly",
                  "value": "true",
                  "description": "Filter classes with available spots"
                }
              ]
            },
            "description": "Get only classes that have available spots for new students"
          },
          "response": []
        },
        {
          "name": "4. Get Class by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/classes/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "classes", "1"]
            },
            "description": "Retrieve a specific class by its ID"
          },
          "response": []
        },
        {
